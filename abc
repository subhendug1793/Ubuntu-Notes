#podlabels.yml
apiVersion: v1
kind: Pod
metadata:
  name: nginx-web
  labels:
    app: nginx-pod
spec:
  containers:
  - name: nginx
    image: nginx:1.16.0
    ports:
    - name: nginxport
      containerPort: 80
  nodeSelector:
    disktype: ssd

#podmanifest.yml
apiVersion: v1
kind: Pod
metadata:
  name: nginxwebproxy
  labels:
    app: nginxpod
spec:
  containers:
  - name: nginx
    image: nginx:1.16.0
    ports:
      - name: nginxport
        containerPort: 80
        
#podservice.yml
apiVersion: v1
kind: Service
metadata:
  name: nginx-service
spec:
  selector:
    app: nginxpod
  ports:
  - protocol: TCP
    port: 80
    NodePort: 31050
    targetPort: nginxport
    
#pods.yml    
apiVersion: v1
kind: Pod
metadata:
  name: pod1
  labels:
    tier: frontend
spec:
  containers:
  - name: hello1
    image: gcr.io/google-samples/hello-app:2.0
---
apiVersion: v1
kind: Pod
metadata:
  name: pod2
  labels:
    tier: frontend
spec:
  containers:
  - name: hello2
    image: gcr.io/google-samples/hello-app:1.0
    
#replicaset.yml 
apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: frontend
  labels:
    app: guestbook
    tier: frontend
spec:
  #modify replicas according to your case
  replicas: 3
  selector:
    matchLabels:
      tier: frontend
  template:
    metadata:
      labels:
        tier: frontend
    spec:
      containers:
      - name: php-redis
        image: gcr.io/google_samples/gb-frontend:v3
        
#replication.yml
apiVersion: v1
kind: ReplicationController
metadata:
  name: nginx
spec:
  replicas: 3
  selector:
    app: nginx
  template:
    metadata:
      name: nginx
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx
        ports:
        - containerPort: 80
        
#webservicedep.yml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
  labels:
    app: nginx
spec:
  replicas: 3
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx:1.7.9
        ports:
        - containerPort: 80
        
#pod-liveness-cmd.yml        
apiVersion: v1
kind: Pod
metadata:
  labels:
    test: liveness
  name: liveness-exec
spec:
  containers:
  - name: liveness
    image: k8s.gcr.io/busybox
    args:
    - /bin/sh
    - -c
    - touch /tmp/healthy; sleep 60; rm -rf /tmp/healthy; sleep 600
    livenessProbe:
      exec:
        command:
        - cat
        - /tmp/healthy
      initialDelaySeconds: 5
      periodSeconds: 5

#pod-liveness-http.yml
apiVersion: v1
kind: Pod
metadata:
  labels:
    test: liveness
  name: liveness-http
spec:
  containers:
  - name: liveness
    image: k8s.gcr.io/liveness
    args:
    - /server
    livenessProbe:
      httpGet:
        path: /healthz
        port: 8080
        httpHeaders:
        - name: Custom-Header
          value: Awesome
      initialDelaySeconds: 3
      periodSeconds: 3
      
#pod-readiness.yml
apiVersion: v1
kind: Pod
metadata:
  labels:
    test: liveness
  name: readiness-exec
spec:
  containers:
  - name: readiness
    image: k8s.gcr.io/busybox
    args:
    - /bin/sh
    - -c
    - touch /tmp/healthy; sleep 60; rm -rf /tmp/healthy; sleep 600
    livenessProbe:
      exec:
        command:
        - cat
        - /tmp/healthy
      initialDelaySeconds: 15
      periodSeconds: 5
    readinessProbe:
      exec:
        command:
        - cat
        - /tmp/healthy
      initialDelaySeconds: 15
      periodSeconds: 5
      
#pod-lifecycle-hooks.yml
apiVersion: v1
kind: Pod
metadata:
  name: lifecycle-demo
spec:
  containers:
  - name: lifecycle-demo-container
    image: nginx
    lifecycle:
      postStart:
        exec:
          command: ["/bin/sh", "-c", "echo Hello from the postStart handler > /usr/share/message"]
      preStop:
        exec:
          command: ["/bin/sh","-c","nginx -s quit; while killall -0 nginx; do sleep 1; done"]
          
#secrets.yml          
apiVersion: v1
kind: Secret
metadata:
  name: mysecret-manifest
type: Opaque
data:
  username: c3ViaGVuZHVn
  password: azhzdGVzdEAxMjM=
  
#pod-volume-secrets.yml  
apiVersion: v1
kind: Pod
metadata:
  name: mypod-voulmesecret
spec:
  containers:
  - name: volumesecret
    image: redis
    volumeMounts:
    - name: foo
      mountPath: "/etc/foo"
      readOnly: true
  volumes:
  - name: foo
    secret:
      secretName: mysecret-manifest          
      
#mysql-database.yml      
apiVersion: v1
kind: Pod
metadata:
  name: database
  labels:
    app: database
spec:
  containers:
  - name: mysql
    image: mysql:5.7
    ports:
    - name: mysql-port
      containerPort: 3306
    env:
      - name: MYSQL_ROOT_PASSWORD
        value: rootpassword
      - name: MYSQL_USER
        value: helloworld
      - name: MYSQL_PASSWORD
        value: password
      - name: MYSQL_DATABASE
        value: helloworld

#mysqldb-service.yml
apiVersion: v1
kind: Service
metadata:
  name: database-service
spec:
  ports:
  - port: 3306
    protocol: TCP
  selector:
    app: database
  type: NodePort

#nodejs-web.yml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nodejs-deployment
spec:
  replicas: 3
  selector:
    matchLabels:
      app: nodejs-web
  template:
    metadata:
      labels:
         app: nodejs-web
    spec:
      containers:
      - name: kubernetes-demo
        image: anshuldevops/kubernetes-demo
        command: ["node", "index-db.js"]
        ports:
        - name: nodejs-port
          containerPort: 3000
        env:
          - name: MYSQL_HOST
            value: database-service
          - name: MYSQL_USER
            value: root
          - name: MYSQL_PASSWORD
            value: rootpassword
          - name: MYSQL_DATABASE
            value: helloworld

#nodejs-service.yml
apiVersion: v1
kind: Service
metadata:
  name: nodejs-web-service
spec:
  ports:
  - port: 3000
    protocol: TCP
  selector:
    app: nodejs-web
  type: NodePort
  
#simple-configmap.yml  
apiVersion: v1
kind: ConfigMap
metadata:
  name: simple-configmap
  namespace: default
data:
  strategy.type: HFT
  strategy.maxVolume: "3000"
  strategy.risk: high
  
#demo-web-pod.yml  
apiVersion: v1
kind: Pod
metadata:
  name: demo-web
spec:
  containers:
  - name: envtest
    image: anshuldevops/kubernetes-web:1.10.6
    ports:
    - containerPort: 8080
    env:
    - name: STRATEGY_RISK
      valueFrom:
        configMapKeyRef:
          name: simple-configmap
          key: strategy.risk
    - name: STRATEGY_TYPE
      valueFrom:
        configMapKeyRef:
          name: simple-configmap
          key: strategy.type

#posix-config.yml
apiVersion: v1
kind: ConfigMap
metadata:
  name: posix-config
  namespace: default
data:
  FONT_DEFAULT_COLOR: green
  FONT_DEFAULT_SIZE: "14px"

#posix-pod-demo.yml
apiVersion: v1
kind: Pod
metadata:
  name: demo-posix-env
spec:
  containers:
  - name: posix-test
    image: anshuldevops/kubernetes-web:1.10.6
    ports:
    - containerPort: 8080
  envFrom:
  - configMapRef:
     name: posix-config


demo-config-pod.yml
apiVersion: v1
kind: Pod
metadata:
  name: demo-config-volume
spec:
  containers:
  - name: demo-cofigvol
    image: anshuldevops/kubernetes-web:1.10.6
    volumeMounts:
    - name: config-volume
      mountPath: /etc/config
  volumes:
    - name: config-volume
      configMap:
      name: simple-configmap
  restartPolicy: Never

#nginx-deployment.yml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-official-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nginx-official
  template:
    metadata:
      labels:
        app: nginx-official
    spec:
      containers:
      - name: nginx-official
        image: nginx:latest
        ports:
        - containerPort: 8080
        
#nginx-deployment-service.yml        
apiVersion: v1
kind: Service
metadata:
  name: nginx-official-service
spec:
  type: NodePort
  ports:
  - protocol: TCP
    port: 80
    nodePort: 31303
  selector:
    app: nginx-official
    
